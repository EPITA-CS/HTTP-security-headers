{
  "name": "HTTP Security Headers",
  "version": "1.0",
  "description": "Checks whether security headers are present and configured securely.",
  "browser_action": {
   "default_icon":  {
      "48": "48.png",
      "96": "96.png"
  },
   "default_popup": "popup.html"
  },
  "permissions": [
  "background",
	"activeTab",
    "webRequest",
	"downloads",
	"notifications",
	"tabs",
    "*://*/*"
  ],
  "manifest_version": 2,
  "background":{
  "scripts":["background.js"],
  "persistent":true
  }
}
